# Copy this file to `.env.local` (never commit real secrets to git)
# and replace placeholder values with your actual credentials.

# PostgreSQL (Amazon RDS)
DATABASE_HOST=your-rds-endpoint.amazonaws.com
DATABASE_PORT=5432
DATABASE_USER=postgres_user
DATABASE_PASSWORD=postgres_password
DATABASE_NAME=postgres_database

# AWS S3
AWS_REGION=YOUR_AWS_REGION_HERE
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY_HERE
AWS_S3_BUCKET=YOUR_S3_BUCKET_NAME_HERE

# Stripe (to be added during payments integration)
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY_HERE

# Optional: overrides for local development only
# DATABASE_SSL=false
